
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Domain.SYS_LOG
<style type="text/css">
    .table tr td:nth-child(2n+1) {
        color: #1ab394;
        text-align: right;
        width: 100px;
    }

    .gray-bg {
        background-color: #fff;
    }
</style>
<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="ibox-detail-title">
            <i class="fa fa-file-text"></i>系统日志详情
        </div>
        <div class="ibox-content">
            <div class="row">
                <table id="dataTable" class="table table-striped table-hover dataTables-example" style="margin:-16px 0 0 0;">
                    <tbody>
                        <tr>
                            <td>日志日期：</td>
                            <td> @Model.DATES</td>
                            <td>日志级别：</td>
                            <td>
                                @{
                                    var dic = Common.Tools.BindEnums(typeof(Common.Enums.enumLog4net));
                                    var level = dic.Where(p => p.Key == Model.LEVELS).First().Value;
                                }
                                @level
                            </td>
                        </tr>
                        <tr>
                            <td>操作用户：</td>
                            <td> @Model.CLIENTUSER</td>
                            <td>操作IP：</td>
                            <td>@Model.CLIENTIP</td>
                        </tr>
                        <tr>
                            <td>请求URL：</td>
                            <td colspan="3"> @Model.REQUESTURL</td>
                        </tr>
                        <tr>
                            <td>执行动作：</td>
                            <td colspan="3"> @Model.ACTION</td>
                        </tr>
                        <tr>
                            <td>日志消息：</td>
                            <td colspan="3"> @Model.MESSAGE</td>
                        </tr>
                        <tr>
                            <td>异常消息：</td>
                            <td colspan="3"> @Model.EXCEPTION</td>
                        </tr>                        
                    </tbody>
                </table>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="text-center">
                <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="fa fa-reply-all"></i> 取消返回</button>
            </div>
        </div>
    </div>
</div>

