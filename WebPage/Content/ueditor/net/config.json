/* 前後端通信相關的配置,注釋只允許使用多行方式 */
{
  /* 上傳圖片配置項 */
  "imageActionName": "uploadimage", /* 執行上傳圖片的action名稱 */
  "imageFieldName": "upfile", /* 提交的圖片表單名稱 */
  "imageMaxSize": 2048000, /* 上傳大小限制，單位B */
  "imageAllowFiles": [ ".png", ".jpg", ".jpeg", ".gif", ".bmp" ], /* 上傳圖片格式顯示 */
  "imageCompressEnable": true, /* 是否壓縮圖片,預設是true */
  "imageCompressBorder": 1600, /* 圖片壓縮最長邊限制 */
  "imageInsertAlign": "none", /* 插入的圖片浮動方式 */
  "imageUrlPrefix": "", /* 圖片訪問路徑首碼 */
  "imagePathFormat": "/upload/images/{yyyy}/{mm}/{time}{rand:6}", /* 上傳保存路徑,可以自訂保存路徑和檔案名格式 */
  /* {filename} 會替換成原檔案名,配置這項需要注意中文亂碼問題 */
  /* {rand:6} 會替換成亂數,後面的數字是亂數的位元數 */
  /* {time} 會替換成時間戳記 */
  /* {yyyy} 會替換成四位年份 */
  /* {yy} 會替換成兩位年份 */
  /* {mm} 會替換成兩位月份 */
  /* {dd} 會替換成兩位日期 */
  /* {hh} 會替換成兩位小時 */
  /* {ii} 會替換成兩位分鐘 */
  /* {ss} 會替換成兩位秒 */
  /* 非法字元 \ : * ? " < > | */
  /* 具請體看線上文檔: fex.baidu.com/ueditor/#use-format_upload_filename */

  /* 塗鴉圖片上傳配置項 */
  "scrawlActionName": "uploadscrawl", /* 執行上傳塗鴉的action名稱 */
  "scrawlFieldName": "upfile", /* 提交的圖片表單名稱 */
  "scrawlPathFormat": "/upload/images/{yyyy}/{mm}/{time}{rand:6}", /* 上傳保存路徑,可以自訂保存路徑和檔案名格式 */
  "scrawlMaxSize": 2048000, /* 上傳大小限制，單位B */
  "scrawlUrlPrefix": "", /* 圖片訪問路徑首碼 */
  "scrawlInsertAlign": "none",

  /* 截圖工具上傳 */
  "snapscreenActionName": "uploadimage", /* 執行上傳截圖的action名稱 */
  "snapscreenPathFormat": "/upload/images/{yyyy}/{mm}/{time}{rand:6}", /* 上傳保存路徑,可以自訂保存路徑和檔案名格式 */
  "snapscreenUrlPrefix": "", /* 圖片訪問路徑首碼 */
  "snapscreenInsertAlign": "none", /* 插入的圖片浮動方式 */

  /* 抓取遠端圖片配置 */
  "catcherLocalDomain": [ "127.0.0.1", "localhost", "img.baidu.com" ],
  "catcherActionName": "catchimage", /* 執行抓取遠端圖片的action名稱 */
  "catcherFieldName": "source", /* 提交的圖片清單表單名稱 */
  "catcherPathFormat": "/upload/images/{yyyy}/{mm}/{time}{rand:6}", /* 上傳保存路徑,可以自訂保存路徑和檔案名格式 */
  "catcherUrlPrefix": "", /* 圖片訪問路徑首碼 */
  "catcherMaxSize": 2048000, /* 上傳大小限制，單位B */
  "catcherAllowFiles": [ ".png", ".jpg", ".jpeg", ".gif", ".bmp" ], /* 抓取圖片格式顯示 */

  /* 上傳視頻配置 */
  "videoActionName": "uploadvideo", /* 執行上傳視頻的action名稱 */
  "videoFieldName": "upfile", /* 提交的視頻表單名稱 */
  "videoPathFormat": "/upload/videos/{yyyy}/{mm}/{time}{rand:6}", /* 上傳保存路徑,可以自訂保存路徑和檔案名格式 */
  "videoUrlPrefix": "", /* 視頻訪問路徑首碼 */
  "videoMaxSize": 1024000000, /* 上傳大小限制，單位B，預設100MB */
  "videoAllowFiles": [
    ".flv",
    ".swf",
    ".mkv",
    ".avi",
    ".rm",
    ".rmvb",
    ".mpeg",
    ".mpg",
    ".ogg",
    ".ogv",
    ".mov",
    ".wmv",
    ".mp4",
    ".webm",
    ".mp3",
    ".wav",
    ".mid"
  ], /* 上傳視頻格式顯示 */

  /* 上傳檔配置 */
  "fileActionName": "uploadfile", /* controller裡,執行上傳視頻的action名稱 */
  "fileFieldName": "upfile", /* 提交的文件表單名稱 */
  "filePathFormat": "/upload/files/{yyyy}/{mm}/{time}{rand:6}", /* 上傳保存路徑,可以自訂保存路徑和檔案名格式 */
  "fileUrlPrefix": "", /* 檔訪問路徑首碼 */
  "fileMaxSize": 512000000, /* 上傳大小限制，單位B，預設500MB */
  "fileAllowFiles": [
    ".png",
    ".jpg",
    ".jpeg",
    ".gif",
    ".bmp",
    ".flv",
    ".swf",
    ".mkv",
    ".avi",
    ".rm",
    ".rmvb",
    ".mpeg",
    ".mpg",
    ".ogg",
    ".ogv",
    ".mov",
    ".wmv",
    ".mp4",
    ".webm",
    ".mp3",
    ".wav",
    ".mid",
    ".rar",
    ".zip",
    ".tar",
    ".gz",
    ".7z",
    ".bz2",
    ".cab",
    ".iso",
    ".doc",
    ".docx",
    ".xls",
    ".xlsx",
    ".ppt",
    ".pptx",
    ".pdf",
    ".txt",
    ".md",
    ".xml",
    ".apk"
  ], /* 上傳檔案格式顯示 */

  /* 列出指定目錄下的圖片 */
  "imageManagerActionName": "listimage", /* 執行圖片管理的action名稱 */
  "imageManagerListPath": "/upload/images", /* 指定要列出圖片的目錄 */
  "imageManagerListSize": 20, /* 每次列出檔數量 */
  "imageManagerUrlPrefix": "", /* 圖片訪問路徑首碼 */
  "imageManagerInsertAlign": "none", /* 插入的圖片浮動方式 */
  "imageManagerAllowFiles": [ ".png", ".jpg", ".jpeg", ".gif", ".bmp" ], /* 列出的檔案類型 */

  /* 列出指定目錄下的檔 */
  "fileManagerActionName": "listfile", /* 執行檔管理的action名稱 */
  "fileManagerListPath": "/upload/files", /* 指定要列出檔的目錄 */
  "fileManagerUrlPrefix": "", /* 檔訪問路徑首碼 */
  "fileManagerListSize": 20, /* 每次列出檔數量 */
  "fileManagerAllowFiles": [
    ".png",
    ".jpg",
    ".jpeg",
    ".gif",
    ".bmp",
    ".flv",
    ".swf",
    ".mkv",
    ".avi",
    ".rm",
    ".rmvb",
    ".mpeg",
    ".mpg",
    ".ogg",
    ".ogv",
    ".mov",
    ".wmv",
    ".mp4",
    ".webm",
    ".mp3",
    ".wav",
    ".mid",
    ".rar",
    ".zip",
    ".tar",
    ".gz",
    ".7z",
    ".bz2",
    ".cab",
    ".iso",
    ".doc",
    ".docx",
    ".xls",
    ".xlsx",
    ".ppt",
    ".pptx",
    ".pdf",
    ".txt",
    ".md",
    ".xml"
  ] /* 列出的檔案類型 */

}
